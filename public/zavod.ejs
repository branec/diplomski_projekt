    <meta name="author" content="">
    <title>Evidencija za profesore i studente</title>
    <link href="/scripts/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/scripts/sidebar.css" rel="stylesheet">
    <link href="/scripts/styles.css" rel="stylesheet">

</head>

<body>

    <header>
        <div class="header-middle-prof">
        <ul class="header-navigation">
            <li><img src="/images/fer_logo.PNG" /></li>
            <a id="predmeti" id="predmeti">Predmeti</a>
            <li>|</li>
            <a id="ispravljanje">Ispravljanje</a>
            <li>|</li>
            <a id="ispravljeni">Ispravljeni ispiti</a>
            <li>|</li>
            <a id="studenti">Studenti</a>
            <li>|</li>
            <li><a href="/logout">Odjava</a></li>
        </ul>
        </div>
    </header>
    <div id="wrapper">
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#">
                        Naslovnica
                    </a>
                </li>
                <li>
                    <a href="/predmeti">Predmeti</a>
                </li>
                <li>
                    <a href="/ispiti">Ispiti</a>
                </li>
                <li>
                    <a href="/studenti">Studenti</a>
                </li>
                <li>
                    <a href="/logout">Odjava</a>
                </li>
            </ul>
        </div>
    </div>

    <div class="table-content">
            <a href="/subjects/newSubject?department=<%=zavod%>&user=<%=korisnik.KorisnickoIme%>" >Dodaj novi predmet</a>
        <h2>Popis svih predmeta zavoda:</h2>
        <table class="table">
            <th></th>
            <th>Naziv</th>
            <th>Nositelj</th>

            <%for (i=0; i<predmeti.length; i++){%>
                <tr>
                    <td><%= i+1 %>.</td>
                    <td> <a href='/prof_ispiti?user=<%=korisnik.KorisnickoIme%>&exam=<%=predmeti[i].Id[0]%>'><%= predmeti[i].Naziv %></td>
                    <td> <%=predmeti[i].Ime%> <%=predmeti[i].Prezime%></td>
                    <td>
                        <a href="/subject/updateSubject?Id=<%=predmeti[i].Id[0]%>">Update</a>
                    </td>
                    <td>
                        <form method="POST" action="/subject/deleteSubject">
                            <input type="hidden" name="id" value="<%= predmeti[i].Id[0] %>" />
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            <% } %>
        </table>

    </div>
    <!-- /#wrapper -->

    <!-- Bootstrap core JavaScript -->
    <script src="/scripts/vendor/jquery/jquery.min.js"></script>
    <script src="/scripts/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/scripts/prof_ispiti.js"></script>
    <script src="/scripts/headerProf.js"></script>

    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
        $("#menu-toggle").addClass("opened-hamburger");
    });
    </script>

</body>

</html>
