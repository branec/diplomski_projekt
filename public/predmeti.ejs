                    <a href="/logout">Odjava</a>
                </li>
            </ul>
        </div>

        <div id="page-content-wrapper">
            <div class="container-fluid">
                <a href="#menu-toggle" class="btn btn-secondary" id="menu-toggle"><img width="30px" src="images/ham-meni.png" /></a>
            </div>
        </div>
  

    </div>
    <div class="table-content">
        <ul>
            <li>
            <a href="/subjects/newSubject" >Dodaj novi predmet</a>
        </li>
        </ul>
        <h2>Popis svih predmeta:</h2>
        <table class="table">
            <th></th>
            <th>Naziv</th>
            <th>Zavod</th>

            <%for (i=0; i<predmeti.length; i++){%>
                <tr>
                    <td><%= i+1 %>.</td>
                    <td> <a href='/prof_ispiti?user=<%=korisnik.KorisnickoIme%>&exam=<%=predmeti[i].Id[0]%>'><%= predmeti[i].Naziv[0] %></td>
                    <td> <a href='/department/<%=predmeti[i].Id[1]%>?user=<%=korisnik.KorisnickoIme%>'><%= predmeti[i].Naziv[1] %></td>
                    <td>
                            <a href="/users/newUserPredmet?Id=<%=predmeti[i].Id[0]%>">Dodaj studenta na predmet</a>
                    </td>
                    <td>
                            <a href="/exams/newExam?Id=<%=predmeti[i].Id[0]%>" >Dodaj novi ispit na predmet</a>
                    </td>
                    <td>
                        <a class="button" href="/subject/updateSubject?Id=<%=predmeti[i].Id[0]%>">Azuriraj predmet</a>
                    </td>
                    <td>
                        <form method="POST" action="/subject/deleteSubject">
                            <input type="hidden" name="id" value="<%= predmeti[i].Id[0] %>" />
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            <% } %>
        </table>

    </div>
    <!-- /#wrapper -->

    <!-- Bootstrap core JavaScript -->
    <script src="/scripts/vendor/jquery/jquery.min.js"></script>
    <script src="/scripts/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="scripts/headerProf.js"></script>

    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
        $("#menu-toggle").addClass("opened-hamburger");
    });
    </script>

</body>

</html>




